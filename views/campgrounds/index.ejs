<% layout('layouts/boilerplate') %>
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.9.3/mapbox-gl.css" rel="stylesheet">

    <div id="cluster_map" class=" w-[90%] h-[400px] mx-auto mt-10 drop-shadow-lg rounded-md"></div>
    <section class="p-4  grid md:grid-cols-2 md:gap-8">
        <% for( let campground of campgrounds) { %>
            <div
                class="flex flex-col max-w-xl justify-self-center max-md:mb-6 lg:flex-row border rounded-lg shadow bg-white border-primary-lt">
                <a href="/campgrounds/<%=campground._id%>">
                    <% if (campground.images.length) { %>
                        <img class="rounded-t-lg w-lvw h-48 lg:h-96 lg:rounded-none lg:rounded-l-lg"
                            src="<%= campground.images[0].url %>" alt="" />
                        <% } else { %>
                            <img class="rounded-t-lg w-lvw h-48 lg:h-96 lg:rounded-none lg:rounded-l-lg"
                                src="
                            https://res.cloudinary.com/dxyhaq7se/image/upload/v1734978856/Kampit/ihzz7cwqv7rudpxefb3r.jpg" alt="" />
                            <% } %>
                </a>
                <div class="p-5">
                    <a href="/campgrounds/<%=campground._id%>">
                        <h3 class="text-xl font-bold tracking-tight text-primary-lt">
                            <%= campground.title %>
                        </h3>
                    </a>
                    <h4 class="mb-2 text-md font-bold tracking-tight text-primary-lt">
                        <%=campground.location %>
                    </h4>
                    <p class="mb-3 font-normal text-secondary">
                        <%= campground.description %>
                    </p>
                    <a href="/campgrounds/<%=campground._id%>"
                        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white  rounded-lg focus:ring-4 focus:outline-none bg-secondary-lt hover:bg-secondary focus:ring-secondary-lt">
                        View Camp
                        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </svg>
                    </a>
                </div>
            </div>
            <% } %>
    </section>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
    </script>
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.9.3/mapbox-gl.js"></script>
    <script src="http://localhost:8080/public/scripts/mapCluster.js"></script>
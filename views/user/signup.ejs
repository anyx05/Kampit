<% layout('layouts/boilerplate') %>
    <div class="text-center mt-8">
        <svg class="text-white h-20 w-20 border rounded-full bg-secondary-lt p-2 mx-auto" viewBox="0 0 448 512">
            <path fill="currentColor"
                d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z" />
        </svg>
        <h2 class="mt-3 font-semibold text-lg text-primary-lt">Sign Up for KampÄ°t</h2>
        <p class="font-semibold text-gray-600">Discover great camping spots!</p>
    </div>
    <form class="max-w-sm mx-auto my-5" action="/sign-up" method="POST">
        <div class="mb-5">
            <label for="username" class="block mb-2 text-md font-semibold text-secondary-lt">Username</label>
            <input type="text" name="username" id="username"
                class="text-sm rounded-lg block w-full p-2.5 bg-white border border-secondary outline-none placeholder-gray-400 text-gray-900 focus:ring-2 focus:ring-secondary-lt focus:border-secondary-lt"
                placeholder="Enter username" required>
        </div>
        <div class="mb-5">
            <label for="email" class="block mb-2 text-md font-semibold text-secondary-lt">Email</label>
            <div class="relative">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500 aria-hidden=" true" xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor" viewBox="0 0 20 16">
                        <path
                            d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z" />
                        <path
                            d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z" />
                    </svg>
                </div>
                <input type="email" name="email" id="email"
                    class="text-sm rounded-lg block w-full ps-10 p-2.5 bg-white border border-secondary outline-none placeholder-gray-400 text-gray-900 focus:ring-2 focus:ring-secondary-lt focus:border-secondary-lt"
                    placeholder="user@email.com" required>
            </div>
        </div>
        <div class="mb-5">
            <label for="password" class="block mb-2 text-md font-semibold text-secondary-lt">Password</label>
            <input type="password" name="password" id="password"
                class="text-sm rounded-lg block w-full p-2.5 bg-white border border-secondary outline-none placeholder-gray-400 text-gray-900 focus:ring-2 focus:ring-secondary-lt focus:border-secondary-lt"
                placeholder="Enter password" required />
        </div>
        <button type="submit"
            class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-secondary-lt rounded-lg focus:ring-4 focus:ring-secondary-lt hover:bg-secondary">
            Sign Up!
        </button>
        </div>
    </form>
    <p class="text-center my-5 font-semibold text-gray-600">Already have an account? <a href="/login"
            class="text-primary-lt hover:underline hover:decoration-2 hover:underline-offset-2">Login</a></p>